<table class="table table-stripped">
  <thead>
    <tr>
      <th {{action 'sortBy' 'name'}}> NAME</th>
      <th {{action 'sortBy' 'position'}}>POS</th>
      <th {{action 'sortBy' 'stats.points'}}>PTS</th>
      <th {{action 'sortBy' 'stats.assits'}}>AST</th>
      <th {{action 'sortBy' 'stats.blocks'}}>BLK</th>
      <th {{action 'sortBy' 'avg_rebounds'}}>REB</th>
      <th {{action 'sortBy' 'stats.steal'}}>STL</th>
      <th {{action 'sortBy' 'stats.final_score'}}>SCORE</th>
    </tr>
  </thead>
  <tbody>
    {{#each player in model}}
      <tr>
        <td> {{#link-to 'players.show' player.id}} {{player.name}} {{/link-to}} </td>
        <td> {{player.position}} </td>
        <td> {{player.stats.points}} </td>
        <td> {{player.stats.assits}} </td>
        <td> {{player.stats.blocks}} </td>
        <td> {{player.avg_rebounds}} </td>
        <td> {{player.stats.steals}} </td>
        <td> {{player.stats.final_score}} </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{page-numbers content=content}}
