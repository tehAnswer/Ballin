<div class="container">
  {{navbar-user user=nil}}
  <div class="row">

    <div class="col-md-6" id="infoGameContainer">
      <div class="thumbnail" id="infoGame">
        <hr>
        <h1>{{t 'game'}}</h1>
        <hr>
          {{#if model.awayTeam.isLoaded}}
            <h4>{{model.awayTeam.name}} @ {{model.homeTeam.name}} ({{model.awayScore}} - {{model.homeScore}})</h4>
            <ul>
              <li>{{model.homeTeam.siteName}}</li>
              <li>{{model.dateTime}}</li>
              <li>{{model.seasonType}}</li>
            </ul>
          {{else}}
            {{t 'actions.loading'}}...
          {{/if}}
        </div>
      </div>

      <div class="col-md-12">
        {{table-boxscores-away title=model.awayTeam.name boxScores=model.boxScores}}
      </div>

      <div class="col-md-12">
        {{table-boxscores-home title=model.homeTeam.name boxScores=model.boxScores}}
      </div>
  </div>
</div>